package pravougulnik;
import java.util.*;
public class tochki {

	public static void main(String[] args) {
		Scanner scanner = new Scanner (System.in);
		System.out.println("molq vuvedete chislo v intervala ot [1;9]:");
		float input;
		float result;
		input=scanner.nextFloat();
		if(input<1||input>9){
			throw new IllegalArgumentException("molq vuvedete chislo v intervala [1,9]");
		}
				else if (input>=1||input<=3){
					result=input*5;
				System.out.println("krainiqt rezultat e :"+result);
				}
				else if (input>=4||input<=6){
					result=input*10;
				System.out.println("krainiqt rezultat e :"+result);
				}
				else if (input>=7||input<=9){
					result=input*50;
				System.out.println("krainiqt rezultat e :"+result);
		}

		//Създайте програма, която изчислява бонус точки на база резултат от игра. 
		//Потребителят трябва да въведе своите точни в интервалa[1,;9].
		// Ако точките са в интервала [1;3] Умножете ги по 5. 
		//Ако точките са в интервала [4;6] Умножете ги по 10.
		// Ако точките са в интервала [7;9] Умножете ги по 50. Резултатът изведете на екрана

	}

}
