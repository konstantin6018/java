import java.util.ArrayList;
import java.util.Arrays;

public class Main {

	public static void main(String[] args) {
		
		Student Ivan = new Student();
		ArrayList<Integer> gradesIvan = new ArrayList<>(Arrays.asList(5,2,6));
		Ivan.getGrades().put("History",gradesIvan);
		Ivan.getGrades().put("Sport", new ArrayList<>(Arrays.asList(5,4,6)));
		Ivan.getGrades().put("Chemistry", new ArrayList<>(Arrays.asList(6,4,6)));
		Ivan.getGrades().put("Physics", new ArrayList<>(Arrays.asList(6,4,6)));
		Ivan.getGrades().put("IT", new ArrayList<>(Arrays.asList(6,4,6)));
		Student Dragan = new Student();
		 Dragan.getGrades().put("History",new ArrayList<>(Arrays.asList(3,4,6)));
		 Dragan.getGrades().put("Sport", new ArrayList<>(Arrays.asList(6,4,6)));
		 Dragan.getGrades().put("Chemistry", new ArrayList<>(Arrays.asList(6,4,3)));
		 Dragan.getGrades().put("Physics", new ArrayList<>(Arrays.asList(6,4,4)));
		 Dragan.getGrades().put("IT", new ArrayList<>(Arrays.asList(6,4,5)));
		Student Petkan = new Student();
		Petkan.getGrades().put("History",new ArrayList<>(Arrays.asList(3,4,3)));
		Petkan.getGrades().put("Sport", new ArrayList<>(Arrays.asList(6,4,3)));
		Petkan.getGrades().put("Chemistry", new ArrayList<>(Arrays.asList(6,4,3)));
		Petkan.getGrades().put("Physics", new ArrayList<>(Arrays.asList(6,2,4)));
		Petkan.getGrades().put("IT", new ArrayList<>(Arrays.asList(6,6,6)));
		
		for (String key : Ivan.getGrades().keySet()) 
		{
			
			System.out.println("" + key + " -> " + Ivan.getGrades().get(key));

		}
		

		float historyFinal = Dragan.calculateAverageMark("History");
		System.out.println(historyFinal);
		Dragan.addSubjectMark("History", 3);
		
		float sportFinal = Petkan.calculateAverageMark("Sport");
		System.out.println(sportFinal);
		Petkan.addSubjectMark("Sport",6);
		sportFinal = Petkan.calculateAverageMark("Sport");
		System.out.println(sportFinal);
		
		
		for (String key : Petkan.getGrades().keySet()) 
		{
			
			System.out.println("" + key + " -> " +Petkan.getGrades().get(key));

		}
	}
	
	
}
